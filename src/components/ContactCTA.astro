---
import CallToAction from "./CallToAction.astro";
import Icon from "./Icon.astro";
---

<aside id="contact-cta">
  <div class="cta-container">
    <div class="cta-text">
      <h2>Interested in working together?</h2>
      <CallToAction href="mailto:hello.ivantrj@gmail.com">
        Send Me a Message
        <Icon icon="paper-plane-tilt" size="1.2em" />
      </CallToAction>
    </div>

    <form
      action="mailto:hello.ivantrj@gmail.com"
      method="post"
      enctype="text/plain"
    >
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div class="form-group">
        <label for="email">Your Email:</label>
        <input type="email" id="email" name="email" required />
      </div>
      <div class="form-group">
        <label for="service">Service:</label>
        <select id="service" name="service" required>
          <option value="mobile_app">Mobile App Development</option>
          <option value="website">Website Development</option>
          <option value="consulting">Consulting</option>
          <option value="other">Other</option>
        </select>
      </div>
      <div class="form-group">
        <label for="budget">Budget:</label>
        <select id="budget" name="budget" required>
          <option value="below_1k">Below 1k Euro</option>
          <option value="up_to_3k">Up to 3k Euro</option>
          <option value="unlimited">Unlimited</option>
        </select>
      </div>
      <div class="form-group">
        <label for="message">Your Message:</label>
        <textarea id="message" name="message" rows="4" required></textarea>
      </div>
      <button type="submit" class="send-button">Send</button>
    </form>
  </div>
</aside>

<style>
  aside {
    display: flex;
    justify-content: center;
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }

  .cta-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px; /* Adjust as needed */
  }

  .cta-text {
    flex: 1;
    margin-right: 2rem; /* Space between text and form */
  }

  h2 {
    font-size: var(--text-xl);
    margin-bottom: 1rem;
  }

  form {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  label {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  input,
  select,
  textarea {
    padding: 0.75rem;
    border: 1px solid var(--gray-800);
    border-radius: 0.375rem;
    background-color: var(--gray-999);
    color: var(--gray-200);
    font-size: var(--text-md);
  }

  button {
    padding: 0.75rem;
    background-color: var(--accent-regular);
    color: white;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: var(--text-md);
  }

  button:hover {
    background-color: var(--accent-dark);
  }

  @media (min-width: 50em) {
    aside {
      padding: 7.5rem;
    }

    h2 {
      font-size: var(--text-3xl);
    }
  }
</style>
